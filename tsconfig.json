{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "../*": ["src/*", "dist/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["src/**/*"]
}
